<head>
    {{#block "head"}}
    {{>head}}
    {{/block}}
    
    {{#block "styles"}}
    {{/block}}
</head>
<body>
    <header>
    {{#block "navbar"}}
    {{/block}}
    </header>
    
    <main>
        {{#if hasErrors}}
            <div class="alert alert-danger error-list" role="alert">
                {{error}}
            </div>
        {{/if}}
        {{#block "content"}}
        {{/block}}
        {{>spinner}}
    </main>

    <footer class="page-footer">
        {{#block "footer"}}
        {{>footer}}
        {{/block}}

        {{#block "scripts"}}
        {{>common_scripts}}
        {{/block}}
    </footer>
</body>
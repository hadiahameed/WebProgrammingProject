{{!-- HOMEPAGE WHEN USER IS LOGGED IN --}}
{{#extend "layout"}}
    {{#content "navbar"}}
    {{/content}}
    {{#content "content"}}
        <div class="col-sm-6 left d-flex justify-content-center flex-wrap">
            {{>nav}}
            <div class="content">
                <h1>The Literary Archives</h1>
                <div class="signup">
                    <h3>Don't have an account?</h3>
                    <button data-toggle="modal" data-target="#signUpModal" class="btn btn-lg btn-primary btn-block mt-1">Sign Up</button>
                </div>
            </div>
        </div>
        <div class="col-sm-6 d-flex right justify-content-center">
            <dl class="align-self-center mt-5">
                <dd class="pt-2"><i class="fas fa-search"></i> Find interesting books</dd>
                <dd class="pt-2"><i class="fas fa-user-friends"></i> Make new friends</dd>
                <dd class="pt-2"><i class="fas fa-comment"></i> Post your reviews</dd>
            </dl>
            <div class="bg">
            </div>
        </div>

        <!-- Sign up modal -->
        <div class="modal fade" id="signUpModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">New Account</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form>
                        <div class="form-group">
                            <label for="user-name" class="col-form-label">Username:</label>
                            <input required minlength="3" name="username" type="text" class="form-control" id="user-name">
                        </div>
                        <div class="form-group">
                            <label for="user-password" class="col-form-label">Password:</label>
                            <input required minlength="8" name="password" type="password" class="form-control" id="user-password">
                        </div>
                        <div class="form-group">
                            <label for="repeat-user-password" class="col-form-label">Repeat Passport:</label>
                            <input required equalTo="#user-password" minlength="8" type="password" class="form-control" id="repeat-user-password">
                        </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button id="next-btn" type="button" class="btn btn-primary">Next</button>
                    </div>
                </div>
            </div>
        </div>

        <!-- user info -->
        <div class="modal fade" id="infoModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">New Account</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form>
                            <div class="form-group">
                                <label for="first-name" class="col-form-label">First Name:</label>
                                <input name="firstname" required minlength="2" type="text" class="form-control" id="first-name">
                            </div>
                            <div class="form-group">
                                <label for="last-name" class="col-form-label">Last Name:</label>
                                <input name="lastname" required type="text" class="form-control" id="last-name">
                            </div>
                            <div class="form-group">
                                <label for="email" class="col-form-label">Email:</label>
                                <input name="email" required minlength="2" type="email" class="form-control" id="email">
                            </div>
                        </form>
                        <div class="form-group d-flex justify-content-center">
                            <div class="g-recaptcha" data-sitekey="6Lf1GHsUAAAAAJzdSXc25k_9XQI4Zf9uRpiiiOZx"></div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button id="getStarted" type="button" class="btn btn-primary">Get Started</button>
                    </div>
                </div>
            </div>
        </div>


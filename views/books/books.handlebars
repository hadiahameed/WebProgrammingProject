{{!-- MULTIPLE BOOKS DISPLAYED, FOR EXAMPLE: AFTER THE USER PERFORMS A SEARCH --}}
{{#extend "layout"}}
    {{#content "content"}}
    <button type="button" class="btn btn-primary"><a href="/books/new" class="text-white">Add new book</a></button>
        {{#each books}}
        <div id="booksList">
            <img src={{this.image}} alt={{this.title}} class="image">
            <div>
                <h1 id="bookTitle">Title: {{this.title}} </h1>
                <h2 id="author">Author: {{this.author}} </h2>
                <p id="rating">Rating: {{this.rating}} </p>
                <p id="rating">Latest Review: {{this.review}} </p>
            </div>
        </div>
        {{/each}}
    {{/content}}
{{/extend}}
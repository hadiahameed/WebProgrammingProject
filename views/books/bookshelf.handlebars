{{#extend "layout"}}
{{#content "content"}}
<h1> Bookshelves</h1>

<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#addBookshelf">
  Add bookshelf
</button>

<!-- Modal -->
<div class="modal fade" id="addBookshelf" tabindex="-1" role="dialog" aria-labelledby="addBookshelfLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="addBookshelfLabel">New Bookshelf</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <form>
        <div class="modal-body">
            <label>Bookshelf name: <input type="name"></label>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <submit><button type="button" class="btn btn-primary">Save bookshelf</button></submit>
        </div>
      </form>
    </div>
  </div>
</div>

<h2> Bookshelf title </h2>

<img>
<h3> Title of book </h3>
<p> Author of book </p>
<p> Date book was added </p>
<p> Review </p>

 {{/content}}
{{/extend}}
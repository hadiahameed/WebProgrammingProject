{{!-- USER ACCOUNT SETTINGS--}}
{{#extend "loggedIn"}}
{{#content "content"}}
<div class="logged-in-class container">
<div id="account-settings">
    <br>
    <a href="/user/{{user.username}}"><i class="fas fa-arrow-left"></i> Back to your profile</a>
    <br>
    <h2> Update Your Profile Details</h2>
    <br>
    <div class="profile-group">
        <label>First Name:</label>
        <input class="form-control" name="firstname" type="text" value="{{firstname}}">
    </div>
    <br>
    <div class="profile-group">
        <label>Last Name:</label>
            <input class="form-control" name="lastname" type="text" value="{{lastname}}" >
    </div>
    <br>
    <div class="profile-group">
        <label>Username:</label>
            <input class="form-control" name="username" type="text" value="{{username}}">
    </div>
    <br>
    <div class="profile-group">
        <label>Password:</label>
        <input class="form-control" name="password" type="password" value="{{password}}">
    </div>
    <br>
    <button class="profile-submit" id="submitUpdate" value="submit">Save Profile Settings</button>

</div>
</div>
{{/content}}
 {{#content "scripts" mode="append"}}
        <script src="public/scripts/updateProfile.js"></script>
    {{/content}}
{{/extend}}
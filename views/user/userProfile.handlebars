{{#extend "loggedIn"}}
    {{#content "content"}}
        <div class="container mt-3">
            <div class="row">
                <div class="col-md-3">
                    <div class="small-12 medium-2 large-2 columns">
                        <div class="text-center avatar rounded-circle m-auto">
                            <!-- User Profile Image -->
                            {{#if user.image}}
                              <img class="profile-pic" src="/{{user.image}}" alt="Card image cap">
                            {{else}}
                            <img class="profile-pic" src="https://placeimg.com/444/444" alt="Card image cap">
                            {{/if}}
                            <!-- Default Image -->
                            <!-- <i class="fa fa-user fa-5x"></i> -->
                        </div>
                    </div>
                    <div class="p-image">
                        <i class="fa fa-camera upload-button"></i>
                            <input class="file-upload" type="file" accept="image/*"/>
                    </div>
                    <div class="pl-2 pt-2">
                        <br>
                        <h4 class="card-title text-left">{{user.firstname}} {{user.lastname}}</h4>
                        <hr>
                        <dl class="text-secondary">
                            <dt> Username: </dt>
                            <dd>{{user.username}}</dd>
                            <dt>Email: </dt>
                            <dd>{{user.email}}</dd>
                        </dl>
                        
                    </div>
                </div>
                <div class="col-md-5 px-2 mt-7">
                    <h1>Welcome {{user.firstname}}</h1>
                    <br>
                    <div class="user-data-class">
                        {{#if user.bookshelves.length}}
                        <br>
                            <h5><a class="user-bookshelf" href="/bookshelves">{{firstName}}'s Bookshelves</a></h5>
                            <hr>
                            <ul class="my-bookshelf">
                            {{#each user.bookshelves}}
                                <li>{{this.name}}({{this.books.length}})</li>
                            {{/each}}
                            </ul>
                            <div class="user-books-details">
                             <h5><a href="/bookshelves">{{firstName}} has finsihed reading</a></h5>
                             <hr>
                              <ul>
                                {{#each user.bookshelves.[0].books}}    
                                    <li><a href="/books/{{this._id}}"><h5>{{this.title}}</h5></a>
                                    <img class="card-img-top2" src="{{image}}" alt="Card image cap"></li>
                                {{/each}}
                              </ul>
                              <h5><a href="/bookshelves">{{firstName}} is currently reading</a></h5>
                              <hr>
                              <ul>
                                {{#each user.bookshelves.[1].books}}    
                                    <li><a href="/books/{{this._id}}"><h5>{{this.title}}</h5></a>
                                    <img class="card-img-top2" src="{{image}}" alt="Card image cap"></li>
                                {{/each}}
                             </ul>
                             <h5><a href="/bookshelves">{{firstName}} wants to read</a></h5>
                             <hr>
                               <ul>
                                {{#each user.bookshelves.[2].books}}    
                                    <li><a href="/books/{{this._id}}"><h5>{{this.title}}</h5></a>
                                    <img class="card-img-top2" src="{{image}}" alt="Card image cap"></li>
                                {{/each}}
                             </ul>
                             <h5>{{firstName}}'s Latest Updates</h5>
                             <hr>                            
                                <h6>{{firstName}} recently followed </h6>
                        </div>
                      {{/if}}
                    </div>
                </div>
                <div class="col-md-3 mt-2">
                    <button type="button" class="btn btn-primary" id="addShelf">
                    Add bookshelf
                    </button> 
                    <br>
                    <h5><a href="/bookshelves">Books uploaded by {{firstName}}</h5></a>
                            {{#each user.bookshelves}}    
                                {{#each this.books}}
                                <ul>
                                    <li><a href="/books/{{this._id}}"><h5>{{this.title}}</h5></a></li>
                                </ul>
                                {{/each}}
                            {{/each}}
                        
                </div>
            </div>

        </div>
{{/content}}
{{#content "scripts" mode="append"}}
  <script src="/public/scripts/bookshelf.js"></script>
  <script src="/public/scripts/bookshelves.js"></script>
  <script src="/public/scripts/updateProfilePicture.js"></script>
{{/content}}
{{/extend}}